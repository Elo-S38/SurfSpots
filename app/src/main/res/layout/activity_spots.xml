        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonPrevPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â—€ PrÃ©cÃ©dent" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suivant â–¶" />
    </LinearLayout>

    <!-- ðŸ”™ Retour Ã  l'accueil -->
    <Button
        android:id="@+id/buttonRetourAccueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/surf_blue"
        android:text="Retour Ã  l'accueil"
        android:textColor="@android:color/white" />
</LinearLayout>
